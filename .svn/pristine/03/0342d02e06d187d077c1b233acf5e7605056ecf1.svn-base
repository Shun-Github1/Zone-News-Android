<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_line"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:gravity="center"
        android:text="香港"
        android:id="@+id/place_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorTextMiddle"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/divider_color"
        android:id="@+id/divider_view"
        app:layout_constraintStart_toEndOf="@id/place_tv"
        app:layout_constraintBottom_toBottomOf="@id/place_tv"
        app:layout_constraintTop_toTopOf="@id/place_tv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:gravity="center"
        android:text="经济"
        android:layout_marginStart="8dp"
        android:id="@+id/tag_tv"
        app:layout_constraintStart_toEndOf="@id/divider_view"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorTextMiddle"
        />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="14dp"
        android:contentDescription="@null"
        android:id="@+id/news_iv"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_tv"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/colorTextDeep"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/news_title_tv"
        android:text="小米汽車業務預計今年三四季度實現盈利"
        app:layout_constraintTop_toTopOf="@id/news_iv"
        app:layout_constraintEnd_toStartOf="@id/news_iv"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="7个报导"
        android:id="@+id/news_count_tv"
        app:layout_constraintBottom_toBottomOf="@id/news_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorTextDeep"
        />
    <com.hjq.shape.view.ShapeView
        android:layout_width="3dp"
        android:layout_height="3dp"
        app:shape_type="oval"
        android:id="@+id/dot_tv"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toEndOf="@id/news_count_tv"
        app:layout_constraintBottom_toBottomOf="@id/news_count_tv"
        app:layout_constraintTop_toTopOf="@id/news_count_tv"
        app:shape_solidColor="@color/colorTextDeep"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="3分钟之前"
        android:layout_marginStart="5dp"
        android:id="@+id/news_time_tv"
        app:layout_constraintBottom_toBottomOf="@id/news_iv"
        app:layout_constraintLeft_toRightOf="@id/dot_tv"
        android:textColor="@color/colorTextDeep"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/news_count_tv"
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="13sp"
            android:text="负"
            android:id="@+id/fu_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="13sp"
            android:text="正"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/fu_tv"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#888888"
               android:textSize="13sp"
               android:text="0"
               android:layout_marginStart="18dp"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/score_tv"
               />
           <com.hjq.shape.view.ShapeView
               android:layout_width="match_parent"
               android:layout_height="5dp"
               app:shape_radius="100dp"
               app:layout_constraintBottom_toBottomOf="@id/score_divider_tv"
               app:layout_constraintTop_toTopOf="@id/score_divider_tv"
               android:id="@+id/progress_view"
               app:shape_solidGradientStartColor="#CCF8F7"
               app:shape_solidGradientEndColor="#00DBD5"
               />
           <com.hjq.shape.view.ShapeView
               android:layout_width="3dp"
               android:layout_height="12dp"
               android:layout_marginStart="20dp"
               android:id="@+id/score_divider_tv"
               android:layout_marginTop="3dp"
               app:shape_radius="10dp"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintTop_toBottomOf="@id/score_tv"
               app:shape_solidColor="@color/main_color"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="13sp"
               android:layout_marginTop="5dp"
               android:id="@+id/trans_score_tv"
               android:textColor="@color/colorTextDeep"
               android:text="情感分析0.00"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/score_divider_tv"
               />
       </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>