<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/back_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingHorizontal="10dp"
        android:id="@+id/top_layout"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:onClick="back"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/pg_detail_back"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null"
            android:id="@+id/help_iv"
            android:layout_marginEnd="16dp"
            android:src="@drawable/pg_detail_ask"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/collect_iv"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null"
            android:id="@+id/collect_iv"
            android:layout_marginEnd="16dp"
            android:src="@drawable/pg_detail_collect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/share_iv"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null"
            android:id="@+id/share_iv"
            android:src="@drawable/pg_detail_share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:overScrollMode="never"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toBottomOf="@id/top_layout"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="225dp"
               android:scaleType="centerCrop"
               android:contentDescription="@null"
               android:id="@+id/news_iv"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@color/white"
               android:id="@+id/news_formation_layout"
               android:padding="16dp"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:id="@+id/news_title_tv"
                   android:text="小米汽車業務預計今年三四季度實現盈利"
                   android:textColor="@color/colorTextDeep"
                   />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="小米集團合夥人兼總裁盧偉冰5月25日在財報電話會上透露，YU7技術發布後預約咨詢熱度遠超同期的SU7。他預計，YU7的受眾範圍會比SU7廣，公司對YU7的市場表現充滿信心。"
                    android:textColor="#333333"
                    android:layout_marginTop="13dp"
                    />
               <com.hjq.shape.layout.ShapeRelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="22dp"
                   app:shape_solidColor="@color/white"
                   app:shape_solidPressedColor="@color/divider_color"
                   app:shape_radius="8dp"
                   android:paddingVertical="14dp"
                   app:shape_strokeSize="1dp"
                   app:shape_strokeColor="@color/divider_color"
                   >
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_centerHorizontal="true"
                       >
                       <ImageView
                           android:layout_width="24dp"
                           android:layout_height="24dp"
                           android:src="@drawable/pg_robot"
                           android:contentDescription="@null"
                           android:layout_marginTop="1dp"
                           android:layout_marginEnd="5dp"
                           android:layout_gravity="center"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="13sp"
                           android:textColor="#454545"
                           android:text="问你想问的"
                           android:layout_gravity="center"
                            />
                   </LinearLayout>
               </com.hjq.shape.layout.ShapeRelativeLayout>
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_marginTop="20dp"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="新闻总结由 SearcherAI 提供"
                       android:textColor="#777777"
                       android:textSize="13sp"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintBottom_toBottomOf="@id/feed_back_layout"
                       app:layout_constraintTop_toTopOf="@id/feed_back_layout"
                       />
                    <com.hjq.shape.layout.ShapeRelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:shape_strokeColor="@color/divider_color"
                        app:shape_strokeSize="1dp"
                        android:id="@+id/feed_back_layout"
                        android:paddingVertical="4dp"
                        app:shape_solidPressedColor="@color/divider_color"
                        android:paddingHorizontal="14dp"
                        app:shape_radius="100dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:drawablePadding="2dp"
                            android:text="反馈"
                            android:textColor="#888888"
                            app:drawableStartCompat="@drawable/pg_edit_pen" />
                    </com.hjq.shape.layout.ShapeRelativeLayout>
               </androidx.constraintlayout.widget.ConstraintLayout>
           </LinearLayout>
        <include layout="@layout/layout_score"
            android:id="@+id/score_layout"
            />
        <include layout="@layout/layout_ad"
            android:id="@+id/ad_layout"
            />
        <include layout="@layout/layout_media_focus"
            android:id="@+id/media_focus_layout"
            />
         <include layout="@layout/layout_all_report"
             android:id="@+id/all_report_layout"
             />
         <include layout="@layout/layout_related_topic"
             android:id="@+id/relate_topic_layout"
             />
         <include layout="@layout/layout_related_news"
             android:id="@+id/relate_news_layout"
             />
       </LinearLayout>
   </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>