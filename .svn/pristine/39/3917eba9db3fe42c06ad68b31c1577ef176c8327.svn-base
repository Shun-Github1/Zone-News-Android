<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:id="@+id/top_layout"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pg_home_top_news"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/app_name"-->
<!--            android:layout_marginStart="18dp"-->
<!--            android:textStyle="bold"-->
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            android:id="@+id/home_title_tv"-->
<!--            android:textColor="@color/colorTextDeep"-->
<!--            android:textSize="19sp"-->
<!--            />-->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/notice_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/home_more_iv"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@null"
                    android:src="@drawable/pg_home_notice"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <com.hjq.shape.view.ShapeView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="3dp"
                    app:shape_type="oval"
                    android:id="@+id/red_iv"
                    app:shape_solidColor="@color/colorRed"
                    />
            </FrameLayout>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@null"
                android:id="@+id/home_more_iv"
                android:src="@drawable/pg_home_more"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        app:tabIndicatorColor="@color/main_color"
        app:tabIndicatorHeight="4dp"
        app:tabMode="scrollable"
        app:tabIndicatorFullWidth="false"
        app:tabBackground="@null"
        app:tabRippleColor="@null"
        android:id="@+id/tab_layout"
        app:tabTextAppearance="@style/TabText"
        app:tabTextColor="@color/colorTextSmall"
        app:tabSelectedTextColor="@color/colorTextDeep"
        >

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/home_vp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>