<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_line"
    android:padding="18dp"
    >
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="14dp"
        android:contentDescription="@null"
        android:id="@+id/news_iv"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_tv"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/colorTextDeep"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/news_title_tv"
        android:text="小米汽車業務預計今年三四季度實現盈利"
        app:layout_constraintTop_toTopOf="@id/news_iv"
        app:layout_constraintEnd_toStartOf="@id/news_iv"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="2025-7-4 10:21:52"
        android:layout_marginStart="5dp"
        android:id="@+id/news_time_tv"
        app:layout_constraintBottom_toBottomOf="@id/news_iv"
        app:layout_constraintLeft_toRightOf="@id/dot_tv"
        android:textColor="@color/colorTextDeep"
        />
</com.hjq.shape.layout.ShapeConstraintLayout>