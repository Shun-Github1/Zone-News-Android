<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/pg_login_top"
        android:scaleType="centerCrop"
        android:id="@+id/login_iv"
        android:contentDescription="@null"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/login_iv"
        app:layout_constraintBottom_toBottomOf="@id/login_iv"
        app:layout_constraintLeft_toLeftOf="@id/login_iv"
        app:layout_constraintRight_toRightOf="@id/login_iv"
        android:textSize="44sp"
        android:textStyle="bold"
        android:text="@string/app_name"
        android:textColor="@color/colorTextDeep"
        />
 <androidx.core.widget.NestedScrollView
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:overScrollMode="never"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintTop_toBottomOf="@id/login_iv"
     >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         >
         <com.hjq.shape.layout.ShapeRelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginHorizontal="32dp"
             android:paddingVertical="14dp"
             app:shape_strokeSize="1dp"
             android:layout_marginTop="28dp"
             app:shape_solidPressedColor="@color/divider_color"
             android:id="@+id/face_login_layout"
             app:shape_strokeColor="@color/divider_color"
             app:layout_constraintTop_toBottomOf="@id/login_iv"
             >
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_centerHorizontal="true"
                 tools:ignore="UseCompoundDrawables">
                 <ImageView
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     android:layout_gravity="center"
                     android:contentDescription="@null"
                     android:src="@drawable/icon_login_face"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/medium_txt"
                     android:layout_marginStart="6dp"
                     android:layout_gravity="center"
                     android:textColor="@color/colorTextDeep"
                     android:text="Sign in with Facebook"
                     />
             </LinearLayout>

         </com.hjq.shape.layout.ShapeRelativeLayout>
         <com.hjq.shape.layout.ShapeRelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginHorizontal="32dp"
             android:paddingVertical="14dp"
             app:shape_strokeSize="1dp"
             app:shape_solidPressedColor="@color/divider_color"
             android:layout_marginTop="14dp"
             android:id="@+id/google_login_layout"
             app:shape_strokeColor="@color/divider_color"
             app:layout_constraintTop_toBottomOf="@id/face_login_layout"
             >
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_centerHorizontal="true"
                 tools:ignore="UseCompoundDrawables">
                 <ImageView
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     android:layout_gravity="center"
                     android:contentDescription="@null"
                     android:src="@drawable/icon_login_google"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/medium_txt"
                     android:layout_marginStart="6dp"
                     android:layout_gravity="center"
                     android:textColor="@color/colorTextDeep"
                     android:text="Sign in with Google"
                     />
             </LinearLayout>

         </com.hjq.shape.layout.ShapeRelativeLayout>
         <com.hjq.shape.layout.ShapeRelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginHorizontal="32dp"
             android:paddingVertical="14dp"
             app:shape_strokeSize="1dp"
             app:shape_solidPressedColor="@color/divider_color"
             android:layout_marginTop="14dp"
             android:id="@+id/email_login_layout"
             app:shape_strokeColor="@color/divider_color"
             app:layout_constraintTop_toBottomOf="@id/google_login_layout"
             >
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_centerHorizontal="true"
                 tools:ignore="UseCompoundDrawables">
                 <ImageView
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     android:layout_gravity="center"
                     android:contentDescription="@null"
                     android:src="@drawable/icon_login_email"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/medium_txt"
                     android:layout_marginStart="6dp"
                     android:layout_gravity="center"
                     android:textColor="@color/colorTextDeep"
                     android:text="Sign in with Email"
                     />
             </LinearLayout>

         </com.hjq.shape.layout.ShapeRelativeLayout>
     </LinearLayout>
 </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>