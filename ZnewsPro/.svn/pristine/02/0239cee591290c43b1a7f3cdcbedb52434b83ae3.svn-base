<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="17dp"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/top_report_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部报道"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textColor="@color/colorTextDeep"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@null"
            android:id="@+id/ex_report_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/icon_arrow_regular_down"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:id="@+id/report_hide_layout"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/top_report_layout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.hjq.shape.layout.ShapeFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shape_strokeColor="@color/divider_color"
                app:shape_strokeSize="1dp"
                app:shape_radius="4dp"
                android:id="@+id/rate_layout"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:paddingVertical="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:text="排序"
                    android:drawablePadding="3dp"
                    app:drawableEndCompat="@drawable/icon_arrow_fill_down" />

            </com.hjq.shape.layout.ShapeFrameLayout>
            <com.hjq.shape.layout.ShapeFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shape_strokeColor="@color/divider_color"
                app:shape_strokeSize="1dp"
                app:shape_radius="4dp"
                android:paddingStart="16dp"
                android:id="@+id/filter_layout"
                android:layout_marginStart="12dp"
                android:paddingEnd="12dp"
                android:paddingVertical="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:text="筛选"
                    android:drawablePadding="3dp"
                    app:drawableEndCompat="@drawable/icon_arrow_fill_down" />

            </com.hjq.shape.layout.ShapeFrameLayout>
        </LinearLayout>
        <com.anssy.znewspro.selfview.CanScrollRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/report_recycler"
            android:overScrollMode="never"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>