<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="17dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/top_media_focus_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="媒体立场分布"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textColor="@color/colorTextDeep"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@null"
            android:id="@+id/ex_media_focus_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/icon_arrow_regular_down"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:id="@+id/media_hide_layout"
        app:layout_constraintTop_toBottomOf="@id/top_media_focus_layout"
        >
        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shape_solidColor="#F0F0F0"
            app:shape_radius="6dp"
            android:padding="3dp"
            android:id="@+id/c_p_layout"
            android:orientation="horizontal"
            >
            <com.hjq.shape.layout.ShapeRelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:shape_radius="5dp"
                android:gravity="center"
                app:shape_solidColor="@color/white"
                android:id="@+id/c_rb"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Conservative"
                    android:paddingVertical="8dp"
                    android:id="@+id/c_tv"
                    android:drawablePadding="4dp"
                    android:textColor="@color/colorTextDeep"
                    app:drawableStartCompat="@drawable/c_dot" />
            </com.hjq.shape.layout.ShapeRelativeLayout>
            <com.hjq.shape.layout.ShapeRelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:shape_radius="5dp"
                app:shape_solidColor="#F0F0F0"
                android:id="@+id/r_rb"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:id="@+id/p_tv"
                    android:layout_centerInParent="true"
                    android:drawablePadding="4dp"
                    android:text="Progressive"
                    android:textColor="#777777"
                    app:drawableStartCompat="@drawable/pro_dot" />
            </com.hjq.shape.layout.ShapeRelativeLayout>
        </com.hjq.shape.layout.ShapeLinearLayout>
        <com.anssy.znewspro.selfview.CanScrollRecyclerView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginHorizontal="21dp"
            android:id="@+id/media_focus_recycler"
            android:overScrollMode="never"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>