<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bottom_line"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="14dp"
            android:contentDescription="@null"
            android:id="@+id/close_iv"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_popup_close_default"
            app:tint="@color/colorTextDeep" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorTextDeep"
            android:text="排序"
            android:textSize="@dimen/medium_txt"
            />
    </RelativeLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="21dp"
        android:id="@+id/rate_rg"
        android:paddingHorizontal="18dp"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认排序"
            android:checked="true"
            android:id="@+id/default_rb"
            android:background="@color/transparent"
            android:textSize="@dimen/medium_txt"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="媒体影响力从大到小"
            android:background="@color/transparent"
            android:id="@+id/big_rb"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/medium_txt"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="媒体影响力从小到大"
            android:background="@color/transparent"
            android:layout_marginTop="10dp"
            android:id="@+id/small_rb"
            android:textSize="@dimen/medium_txt"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间由近至远"
            android:layout_marginTop="10dp"
            android:id="@+id/now_rb"
            android:background="@color/transparent"
            android:textSize="@dimen/medium_txt"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间由远至近"
            android:layout_marginTop="10dp"
            android:id="@+id/before_rb"
            android:background="@color/transparent"
            android:textSize="@dimen/medium_txt"
            />
    </RadioGroup>
    <com.hjq.shape.view.ShapeButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_solidColor="@color/main_color"
        android:paddingVertical="10dp"
        app:shape_radius="6dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:text="确定"
        android:layout_marginHorizontal="18dp"
        android:id="@+id/yes_btn"
        android:textSize="@dimen/medium_txt"
        android:textColor="@color/white"
        android:layout_marginTop="14dp"
        />
</LinearLayout>