<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="265dp"
             android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shape_strokeSize="0.5dp"
    android:layout_marginEnd="10dp"
    app:shape_strokeColor="@color/divider_color"
    app:shape_radius="8dp"
    android:padding="16dp"
    >
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:round="100dp"
        android:id="@+id/media_iv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/media_iv"
        app:layout_constraintBottom_toBottomOf="@id/media_iv"
        android:layout_marginStart="6dp"
        android:id="@+id/media_name_tv"
        app:layout_constraintStart_toEndOf="@id/media_iv"
        android:textColor="@color/colorTextDeep"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:textColor="@color/colorTextDeep"
        android:id="@+id/title_tv"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/media_iv"
        />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/pro_dot"
        android:layout_marginTop="1dp"
        android:id="@+id/focus_iv"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@id/focus_tv"
        app:layout_constraintTop_toTopOf="@id/focus_tv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/colorTextDeep"
        android:id="@+id/focus_tv"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/focus_iv"
        android:drawablePadding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/place_tv"
        android:textSize="12sp"
        android:textColor="#999999"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</com.hjq.shape.layout.ShapeConstraintLayout>