<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="14dp"
    android:paddingVertical="17dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="风格"
        android:textColor="@color/colorTextDeep"
        android:textSize="15sp" />

    <RadioGroup
        android:id="@+id/style_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <com.hjq.shape.view.ShapeRadioButton
            android:id="@+id/negative_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="偏保守"
            android:textSize="13sp"
            app:shape_solidCheckedColor="@color/main_color"
            app:shape_solidColor="@color/back_color"
            app:shape_textCheckedColor="@color/white"
            app:shape_textColor="#454545" />

        <com.hjq.shape.view.ShapeRadioButton
            android:id="@+id/progress_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="偏进步"
            android:textSize="13sp"
            app:shape_solidCheckedColor="@color/main_color"
            app:shape_solidColor="@color/back_color"
            app:shape_textCheckedColor="@color/white"
            app:shape_textColor="#454545" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:visibility="invisible" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="语言"
        android:textColor="@color/colorTextDeep"
        android:textSize="15sp" />

    <RadioGroup
        android:id="@+id/lang_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <com.hjq.shape.view.ShapeRadioButton
            android:id="@+id/eng_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="English"
            android:textSize="13sp"
            app:shape_solidCheckedColor="@color/main_color"
            app:shape_solidColor="@color/back_color"
            app:shape_textCheckedColor="@color/white"
            app:shape_textColor="#454545" />

        <com.hjq.shape.view.ShapeRadioButton
            android:id="@+id/traditional_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="繁體"
            android:textSize="13sp"
            app:shape_solidCheckedColor="@color/main_color"
            app:shape_solidColor="@color/back_color"
            app:shape_textCheckedColor="@color/white"
            app:shape_textColor="#454545" />

        <com.hjq.shape.view.ShapeRadioButton
            android:id="@+id/simple_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="简体"
            android:textSize="13sp"
            app:shape_solidCheckedColor="@color/main_color"
            app:shape_solidColor="@color/back_color"
            app:shape_textCheckedColor="@color/white"
            app:shape_textColor="#454545" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="深浅度"
        android:textColor="@color/colorTextDeep"
        android:textSize="15sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/know_rg"
        android:orientation="horizontal">

        <com.hjq.shape.view.ShapeRadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="简易"
            android:textSize="13sp"
            android:id="@+id/easy_rb"
            app:shape_solidCheckedColor="@color/main_color"
            app:shape_solidColor="@color/back_color"
            app:shape_textCheckedColor="@color/white"
            app:shape_textColor="#454545" />

        <com.hjq.shape.view.ShapeRadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:id="@+id/professional_rb"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="专业"
            android:textSize="13sp"
            app:shape_solidCheckedColor="@color/main_color"
            app:shape_solidColor="@color/back_color"
            app:shape_textCheckedColor="@color/white"
            app:shape_textColor="#454545" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:visibility="invisible" />
    </RadioGroup>
    <com.hjq.shape.view.ShapeButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_solidColor="@color/main_color"
        android:paddingVertical="10dp"
        app:shape_radius="6dp"
        android:gravity="center"
        android:text="确定"
        android:id="@+id/yes_btn"
        android:textSize="@dimen/medium_txt"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        />
</LinearLayout>