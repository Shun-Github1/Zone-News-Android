<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <include layout="@layout/common_toolbar_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/top_layout"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDeep"
                android:textSize="16sp"
                android:text="Email"
                />
            <com.hjq.shape.view.ShapeEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:textSize="16sp"
                android:id="@+id/email_et"
                android:inputType="textEmailAddress"
                android:paddingVertical="14dp"
                android:hint="Email"
                app:shape_radius="6dp"
                android:textColor="@color/colorTextDeep"
                android:textColorHint="@color/colorTextHint"
                android:paddingHorizontal="17dp"
                app:shape_solidColor="#F5F5F5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDeep"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:text="Password"
                />
            <com.hjq.shape.view.ShapeEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:shape_radius="6dp"
                android:background="@null"
                android:textSize="16sp"
                android:id="@+id/pass_et"
                android:inputType="textPassword"
                android:paddingVertical="14dp"
                android:hint="Password"
                android:textColor="@color/colorTextDeep"
                android:textColorHint="@color/colorTextHint"
                android:paddingHorizontal="17dp"
                app:shape_solidColor="#F5F5F5"
                />
            <com.hjq.shape.view.ShapeButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:paddingVertical="14dp"
                app:shape_radius="6dp"
                android:textColor="@color/white"
                android:id="@+id/login_btn"
                app:shape_solidPressedColor="@color/divider_color"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:text="Log In"
                android:gravity="center"
                app:shape_solidColor="@color/main_color"
                />
            <com.hjq.shape.view.ShapeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:textSize="16sp"
                android:textColor="#666666"
                android:text="Create Account"
                android:id="@+id/register_tv"
                app:shape_solidPressedColor="@color/divider_color"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>