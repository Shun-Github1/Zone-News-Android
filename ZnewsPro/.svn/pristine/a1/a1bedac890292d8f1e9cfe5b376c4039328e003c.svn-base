<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bottom_line"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="14dp"
            android:contentDescription="@null"
            android:id="@+id/close_iv"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_popup_close_default"
            app:tint="@color/colorTextDeep" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorTextDeep"
            android:text="反馈"
            android:textSize="@dimen/medium_txt"
            />
    </RelativeLayout>
    <com.hjq.shape.view.ShapeEditText
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_margin="18dp"
        app:shape_radius="6dp"
        android:padding="10dp"
        android:id="@+id/feed_et"
        android:gravity="top"
        android:hint="请输入反馈内容"
        android:inputType="text"
        android:textSize="@dimen/medium_txt"
        android:textColorHint="@color/colorTextHint"
        app:shape_solidColor="#F5F5F5"
        />
    <com.hjq.shape.view.ShapeButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_solidColor="@color/main_color"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="18dp"
        app:shape_radius="6dp"
        android:gravity="center"
        android:text="确定"
        android:id="@+id/yes_btn"
        android:textSize="@dimen/medium_txt"
        android:textColor="@color/white"
        android:layout_marginBottom="18dp"
        />
</LinearLayout>