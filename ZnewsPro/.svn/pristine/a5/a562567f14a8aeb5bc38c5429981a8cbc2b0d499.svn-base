<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/top_layout"
        android:layout_height="54dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/colorTextDeep"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:text="My"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:src="@drawable/pg_home_top_news"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@null"
            android:id="@+id/setting_iv"
            android:src="@drawable/pg_more"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <com.anssy.znewspro.selfview.NewNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                app:round="100dp"
                android:id="@+id/avatar_iv"
                android:src="@drawable/pg_temp_avatar"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:textSize="16sp"
                android:id="@+id/user_id_tv"
                android:textColor="@color/colorTextDeep"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="48dp"
                android:id="@+id/his_layout"
                android:background="@drawable/common_selector"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@null"
                    android:src="@drawable/pg_my_his"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorTextDeep"
                    android:textSize="16sp"
                    android:text="浏览记录"
                    android:layout_marginStart="15dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_arrow_regular_right"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/common_selector"
                android:id="@+id/collect_layout"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@null"
                    android:src="@drawable/pg_my_collect"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorTextDeep"
                    android:textSize="16sp"
                    android:text="我的收藏"
                    android:layout_marginStart="15dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_arrow_regular_right"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:id="@+id/about_layout"
                android:background="@drawable/common_selector"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@null"
                    android:src="@drawable/pg_my_about_us"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorTextDeep"
                    android:textSize="16sp"
                    android:text="关于我们"
                    android:layout_marginStart="15dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_arrow_regular_right"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bottom_line"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@null"
                    android:src="@drawable/pg_my_version"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorTextDeep"
                    android:textSize="16sp"
                    android:text="版本号"
                    android:layout_marginStart="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:id="@+id/version_tv"
                    android:textColor="@color/colorTextDeep"
                    />
            </LinearLayout>
            <com.hjq.shape.view.ShapeButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shape_solidColor="@color/main_color"
                android:paddingVertical="10dp"
                app:shape_radius="6dp"
                app:shape_solidPressedColor="@color/divider_color"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:text="退出登录"
                android:layout_marginHorizontal="18dp"
                android:id="@+id/out_btn"
                android:textSize="@dimen/medium_txt"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                />
        </LinearLayout>
    </com.anssy.znewspro.selfview.NewNestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>