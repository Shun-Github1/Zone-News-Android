<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/login_iv"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/pg_login_top"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:src="@drawable/pg_login_top_back"
        app:layout_constraintBottom_toBottomOf="@id/login_iv"
        app:layout_constraintLeft_toLeftOf="@id/login_iv"
        app:layout_constraintRight_toRightOf="@id/login_iv"
        app:layout_constraintTop_toTopOf="@id/login_iv" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_iv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.hjq.shape.layout.ShapeRelativeLayout
                android:id="@+id/face_login_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="28dp"
                android:paddingVertical="14dp"
                app:layout_constraintTop_toBottomOf="@id/login_iv"
                app:shape_solidPressedColor="@color/divider_color"
                app:shape_strokeColor="@color/divider_color"
                app:shape_strokeSize="1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_login_face" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"
                        android:text="FaceBook登录"
                        android:textColor="@color/colorTextDeep"
                        android:textSize="@dimen/medium_txt" />
                </LinearLayout>

            </com.hjq.shape.layout.ShapeRelativeLayout>

            <com.hjq.shape.layout.ShapeRelativeLayout
                android:id="@+id/google_login_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="14dp"
                android:paddingVertical="14dp"
                app:layout_constraintTop_toBottomOf="@id/face_login_layout"
                app:shape_solidPressedColor="@color/divider_color"
                app:shape_strokeColor="@color/divider_color"
                app:shape_strokeSize="1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_login_google" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"
                        android:text="Google登录"
                        android:textColor="@color/colorTextDeep"
                        android:textSize="@dimen/medium_txt" />
                </LinearLayout>

            </com.hjq.shape.layout.ShapeRelativeLayout>

            <com.hjq.shape.layout.ShapeRelativeLayout
                android:id="@+id/email_login_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="14dp"
                android:paddingVertical="14dp"
                app:layout_constraintTop_toBottomOf="@id/google_login_layout"
                app:shape_solidPressedColor="@color/divider_color"
                app:shape_strokeColor="@color/divider_color"
                app:shape_strokeSize="1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_login_email" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"
                        android:text="邮箱登录"
                        android:textColor="@color/colorTextDeep"
                        android:textSize="@dimen/medium_txt" />
                </LinearLayout>

            </com.hjq.shape.layout.ShapeRelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>