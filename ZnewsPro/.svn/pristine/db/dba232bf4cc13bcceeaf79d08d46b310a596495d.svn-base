<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_line"
    >
    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:gravity="center"
        android:background="@color/back_color"
        android:id="@+id/place_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorTextMiddle"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_toEndOf="@id/place_tv"
        android:background="@color/divider_color"
        android:id="@+id/divider_view"
        app:layout_constraintStart_toEndOf="@id/place_tv"
        app:layout_constraintBottom_toBottomOf="@id/place_tv"
        app:layout_constraintTop_toTopOf="@id/place_tv"
        />
    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="@color/back_color"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_toEndOf="@id/divider_view"
        android:layout_marginStart="8dp"
        android:id="@+id/tag_tv"
        app:layout_constraintStart_toEndOf="@id/divider_view"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorTextMiddle"
        />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="14dp"
        android:contentDescription="@null"
        android:id="@+id/news_iv"
        android:layout_alignParentEnd="true"
        android:background="@color/back_color"
        android:layout_below="@id/place_tv"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_tv"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/colorTextDeep"
        android:textStyle="bold"
        android:layout_toStartOf="@id/news_iv"
        android:maxLines="2"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:layout_alignTop="@id/news_iv"
        android:id="@+id/news_title_tv"
        android:background="@color/back_color"
        app:layout_constraintTop_toTopOf="@id/news_iv"
        app:layout_constraintEnd_toStartOf="@id/news_iv"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:background="@color/back_color"
        android:id="@+id/news_count_tv"
        android:layout_alignBottom="@id/news_iv"
        app:layout_constraintBottom_toBottomOf="@id/news_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorTextDeep"
        />

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_toEndOf="@id/news_count_tv"
        android:layout_alignBottom="@id/news_iv"
        android:background="@color/back_color"
        android:layout_marginStart="5dp"
        android:id="@+id/news_time_tv"
        app:layout_constraintBottom_toBottomOf="@id/news_iv"
        android:textColor="@color/colorTextDeep"
        />
</RelativeLayout>