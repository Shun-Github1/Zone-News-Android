<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer circle -->
    <item>
        <shape android:shape="oval">
            <size android:width="84dp" android:height="84dp" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="@color/main_color" />
        </shape>
    </item>

    <!-- Vertical bar of plus -->
    <item android:top="28dp" android:bottom="28dp" android:left="40dp" android:right="40dp">
        <shape android:shape="rectangle">
            <size android:width="4dp" android:height="28dp" />
            <solid android:color="@color/main_color" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Horizontal bar of plus -->
    <item android:top="40dp" android:bottom="40dp" android:left="28dp" android:right="28dp">
        <shape android:shape="rectangle">
            <size android:width="28dp" android:height="4dp" />
            <solid android:color="@color/main_color" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>





