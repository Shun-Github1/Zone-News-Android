<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <include layout="@layout/common_toolbar_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/top_layout"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingHorizontal="32dp"
            android:paddingBottom="8dp"
            >
            <!-- Brand header to match login screen style -->
            <ImageView
                android:id="@+id/register_icon"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/ic_person_add" />

            <TextView
                android:id="@+id/create_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="@string/create_account"
                android:textColor="@color/colorTextDeep"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/register_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="@string/register_tagline"
                android:textColor="@color/colorTextMiddle"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorTextDeep"
                android:textSize="16sp"
                android:text="@string/full_name"
                android:textStyle="bold"
                />
            <com.hjq.shape.view.ShapeEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="16sp"
                android:id="@+id/name_et"
                android:inputType="textPersonName"
                android:paddingVertical="8dp"
                android:minHeight="30dp"
                android:hint="@string/hint_username"
                app:shape_radius="6dp"
                 android:textColor="@color/colorTextDeep"
                 android:textColorHint="@color/colorTextHint"
                android:paddingHorizontal="17dp"
                 app:shape_solidColor="@color/light_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDeep"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:text="@string/email"
                android:textStyle="bold"
                />
            <com.hjq.shape.view.ShapeEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:shape_radius="6dp"
                android:background="@null"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="16sp"
                android:id="@+id/email_et"
                android:inputType="textEmailAddress"
                android:paddingVertical="8dp"
                android:minHeight="30dp"
                android:hint="@string/hint_email"
                 android:textColor="@color/colorTextDeep"
                 android:textColorHint="@color/colorTextHint"
                android:paddingHorizontal="17dp"
                 app:shape_solidColor="@color/light_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDeep"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:text="@string/password"
                android:textStyle="bold"
                />
            <com.hjq.shape.view.ShapeEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:shape_radius="6dp"
                android:background="@null"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="16sp"
                android:id="@+id/pass_et"
                android:inputType="textPassword"
                android:paddingVertical="8dp"
                android:minHeight="30dp"
                android:hint="@string/hint_password"
                 android:textColor="@color/colorTextDeep"
                 android:textColorHint="@color/colorTextHint"
                android:paddingHorizontal="17dp"
                 app:shape_solidColor="@color/light_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDeep"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:text="@string/confirm_password"
                android:textStyle="bold"
                />
            <com.hjq.shape.view.ShapeEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:shape_radius="6dp"
                android:background="@null"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="16sp"
                android:id="@+id/pass_again_et"
                android:inputType="textPassword"
                android:paddingVertical="8dp"
                android:minHeight="30dp"
                android:hint="@string/confirm_password_hint"
                 android:textColor="@color/colorTextDeep"
                 android:textColorHint="@color/colorTextHint"
                android:paddingHorizontal="17dp"
                 app:shape_solidColor="@color/light_gray"
                />
            <com.hjq.shape.view.ShapeButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingVertical="14dp"
                app:shape_radius="6dp"
                android:textColor="@color/white"
                android:id="@+id/register_btn"
                app:shape_solidPressedColor="@color/divider_color"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:text="@string/create_account"
                android:gravity="center"
                app:shape_solidColor="@color/main_color"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>