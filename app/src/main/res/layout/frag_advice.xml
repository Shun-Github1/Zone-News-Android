<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/top_layout"
        android:layout_height="54dp"
        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/colorTextDeep"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:text="@string/person_recommend"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@null"
            android:id="@+id/setting_iv"
            android:src="@drawable/pg_advice_setting"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <com.hjq.shape.layout.ShapeRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:padding="11dp"
        android:visibility="gone"
        app:shape_solidColor="?attr/colorSurfaceVariant"
        android:id="@+id/search_layout"
        app:shape_radius="6dp"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_search"
            android:contentDescription="@null"
            android:id="@+id/search_iv"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/discover_headline"
            android:importantForAutofill="no"
            android:textSize="14sp"
            android:inputType="text"
            android:id="@+id/search_et"
            android:imeOptions="actionSearch"
            android:layout_marginStart="6dp"
            android:textColor="@color/colorTextDeep"
            android:textColorHint="@color/colorTextHint"
            android:layout_toEndOf="@id/search_iv"
            />
    </com.hjq.shape.layout.ShapeRelativeLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/smart_refresh"
        app:layout_constraintTop_toBottomOf="@id/search_layout">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/home_recycler"
            android:overScrollMode="never"

            />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>