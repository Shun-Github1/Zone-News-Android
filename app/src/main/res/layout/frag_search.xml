<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/top_layout"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="?attr/colorSurface">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/colorTextDeep"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:text="@string/discover"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@null"
            android:id="@+id/setting_iv"
            android:src="@drawable/pg_more"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <com.hjq.shape.layout.ShapeRelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        app:shape_radius="10dp"
        app:shape_solidColor="?attr/colorSurface"
        app:shape_strokeColor="?attr/colorSurfaceVariant"
        app:shape_strokeSize="1dp"
        app:layout_constraintTop_toBottomOf="@id/top_layout">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_search"
            android:contentDescription="@null"
            android:id="@+id/search_iv"
            app:tint="@color/colorTextMiddle"/>
        <EditText
            android:id="@+id/search_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/search_iv"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:textCursorDrawable="@drawable/cursor_color"
            android:hint="@string/discover_headline"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:padding="0dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textSize="14sp"
            android:textColor="@color/colorTextDeep"
            android:textColorHint="@color/colorTextHint"/>
    </com.hjq.shape.layout.ShapeRelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/home_recycler"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_layout"
        />
</androidx.constraintlayout.widget.ConstraintLayout>