<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/bottom_line">

    <!-- Right-aligned image spanning full section height -->
    <ImageView
        android:id="@+id/news_iv"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_marginVertical="4dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Left stack: fully left-aligned; width equals space before image -->
    <LinearLayout
        android:id="@+id/left_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="4dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/news_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- place | divider | tag row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/place_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Placeholder"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
            <View
                android:id="@+id/divider_view"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:background="@color/colorPrimary" />
            <TextView
                android:id="@+id/tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Placeholder"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/news_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="小米汽車業務預計今年三四季度實現盈利"
            android:textColor="@color/colorTextDeep"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Subjectivity + bias bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/subjectivity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/trans_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subjectivity: 0.00"
                android:textColor="@color/colorTextSmall"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sentiment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trans_score_tv">

                <View
                    android:id="@+id/progress_track"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:background="@drawable/bg_progress_track_transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/progress_highlight"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:background="@drawable/bg_progress_positive"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/progress_track"
                    app:layout_constraintBottom_toBottomOf="@id/progress_track" />

                <View
                    android:id="@+id/progress_centerline"
                    android:layout_width="1dp"
                    android:layout_height="6dp"
                    android:background="#E6E6E6"
                    app:layout_constraintTop_toTopOf="@id/progress_track"
                    app:layout_constraintBottom_toBottomOf="@id/progress_track"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Bottom row: count | dot | time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/news_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7个报导"
                android:textColor="@color/colorTextSmall"
                android:textSize="12sp" />
            <View
                android:id="@+id/dot_tv"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:background="@color/colorTextSmall"
                tools:ignore="DuplicateIds" />
            <TextView
                android:id="@+id/news_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3分钟之前"
                android:textColor="@color/colorTextSmall"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>