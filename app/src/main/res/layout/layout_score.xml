<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="18dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="@string/metrics"
            android:textStyle="bold"
            android:textColor="@color/colorTextDeep"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:id="@+id/c_p_layout"
                tools:ignore="UselessParent">
                <com.hjq.shape.view.ShapeView
                    android:layout_width="300dp"
                    android:layout_height="5dp"
                    android:id="@+id/c_view"
                    app:shape_radiusInTopLeft="100dp"
                    app:shape_radiusInBottomLeft="100dp"
                    app:shape_solidColor="#CCF8F7"
                    />
                <com.hjq.shape.view.ShapeView
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:id="@+id/p_view"
                    app:shape_radiusInTopRight="100dp"
                    app:shape_radiusInBottomRight="100dp"
                    app:shape_solidColor="#00DBD5"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_below="@id/c_p_layout"
                android:text="保守 60%"
                android:id="@+id/c_tv"
                android:textColor="#454545"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/c_p_layout"
                android:text="开放 40%"
                android:id="@+id/p_tv"
                android:textColor="#454545"
                />
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/news_count_tv"
            android:layout_marginTop="23dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="13sp"
                android:text="负"
                android:id="@+id/fu_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="13sp"
                android:text="正"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fu_tv"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:text="0"
                    android:layout_marginStart="18dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/score_tv"
                    />
                <com.hjq.shape.view.ShapeView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    app:shape_radius="100dp"
                    app:layout_constraintBottom_toBottomOf="@id/score_divider_tv"
                    app:layout_constraintTop_toTopOf="@id/score_divider_tv"
                    android:id="@+id/progress_view"
                    app:shape_solidGradientStartColor="#CCF8F7"
                    app:shape_solidGradientEndColor="#00DBD5"
                    />
                <com.hjq.shape.view.ShapeView
                    android:layout_width="3dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/score_divider_tv"
                    android:layout_marginTop="3dp"
                    app:shape_radius="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/score_tv"
                    app:shape_solidColor="@color/main_color"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/trans_score_tv"
                    android:textColor="@color/colorTextDeep"
                    android:text="情感分析0.00"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/score_divider_tv"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/news_count_tv"
            android:layout_marginTop="23dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="13sp"
                android:text="0"
                android:id="@+id/zero_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="13sp"
                android:text="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/zero_tv"
                >
                <com.hjq.shape.view.ShapeView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    app:shape_radius="100dp"
                    app:layout_constraintBottom_toBottomOf="@id/score_sub_divider_tv"
                    app:layout_constraintTop_toTopOf="@id/score_sub_divider_tv"
                    android:id="@+id/progress_sub_view"
                    app:shape_solidGradientStartColor="#CCF8F7"
                    app:shape_solidGradientEndColor="#00DBD5"
                    />
                <com.hjq.shape.view.ShapeView
                    android:layout_width="3dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/score_sub_divider_tv"
                    app:shape_radius="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:shape_solidColor="@color/main_color"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/trans_sub_score_tv"
                    android:textColor="@color/colorTextDeep"
                    android:text="主观分析0.00"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/score_sub_divider_tv"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>