<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="20dp">

    <!-- Theme Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/theme_preference_title"
        android:textColor="@color/colorTextDeep"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/theme_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <com.hjq.shape.view.ShapeRadioButton
            android:id="@+id/light_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="@string/theme_light"
            android:textSize="13sp"
            app:shape_solidCheckedColor="@color/main_color"
            app:shape_solidColor="@color/light_gray"
            app:shape_textCheckedColor="@color/colorOnPrimary"
            app:shape_textColor="@color/colorOnSurfaceVariant" />

        <com.hjq.shape.view.ShapeRadioButton
            android:id="@+id/dark_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="@string/theme_dark"
            android:textSize="13sp"
            app:shape_solidCheckedColor="@color/main_color"
            app:shape_solidColor="@color/light_gray"
            app:shape_textCheckedColor="@color/colorOnPrimary"
            app:shape_textColor="@color/colorOnSurfaceVariant" />

        <com.hjq.shape.view.ShapeRadioButton
            android:id="@+id/system_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="@string/theme_system"
            android:textSize="13sp"
            app:shape_solidCheckedColor="@color/main_color"
            app:shape_solidColor="@color/light_gray"
            app:shape_textCheckedColor="@color/colorOnPrimary"
            app:shape_textColor="@color/colorOnSurfaceVariant" />
    </RadioGroup>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@color/divider_color" />

    <!-- Language Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/language"
        android:textColor="@color/colorTextDeep"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/lang_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <com.hjq.shape.view.ShapeRadioButton
            android:id="@+id/eng_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="English"
            android:textSize="13sp"
            app:shape_solidCheckedColor="@color/main_color"
            app:shape_solidColor="@color/colorSurfaceVariant"
            app:shape_textCheckedColor="@color/colorOnPrimary"
            app:shape_textColor="@color/colorOnSurfaceVariant" />

        <com.hjq.shape.view.ShapeRadioButton
            android:id="@+id/traditional_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="繁體"
            android:textSize="13sp"
            app:shape_solidCheckedColor="@color/main_color"
            app:shape_solidColor="@color/colorSurfaceVariant"
            app:shape_textCheckedColor="@color/colorOnPrimary"
            app:shape_textColor="@color/colorOnSurfaceVariant" />

        <com.hjq.shape.view.ShapeRadioButton
            android:id="@+id/simple_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="简体"
            android:textSize="13sp"
            app:shape_solidCheckedColor="@color/main_color"
            app:shape_solidColor="@color/colorSurfaceVariant"
            app:shape_textCheckedColor="@color/colorOnPrimary"
            app:shape_textColor="@color/colorOnSurfaceVariant" />
    </RadioGroup>

    <!-- Apply Button -->
    <com.hjq.shape.view.ShapeButton
        android:id="@+id/apply_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="@string/confirm"
        android:textColor="@color/colorOnPrimary"
        android:textSize="@dimen/medium_txt"
        app:shape_radius="8dp"
        app:shape_solidColor="@color/main_color" />

</LinearLayout>
